---
import BaseLayout from "../../layouts/base-layout.astro";
import XElement from "astro-xelement";

const { button: Button, span: Display, CounterWrapper } = XElement;
---

<BaseLayout title="XElement testing"
	><CounterWrapper
		@do={(element, store) => {
			store.count = 0;
		}}
	>
		<Button
			@click={(event, store) => {
				store.count--;
				counterdisplay.textContent = store.count;
			}}>-</Button
		>
		<Display id="counterdisplay">0</Display>
		<Button
			@click={(event, store) => {
				store.count++;
				counterdisplay.textContent = store.count;
			}}>+</Button
		></CounterWrapper
	>
</BaseLayout>
