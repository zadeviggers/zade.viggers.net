---
import MainPageLayout from "../../layouts/main-page-layout.astro";
import WordleSolver from "../../components/new-wordle-solver";
import "simple-vanilla-notifications/defaults.css";
---

<MainPageLayout title="Wordle solver">
	<h1 class="font-bold">Wordle solver</h1>
	<p>
		Go back to the <a href="/tools/wordle-solver" class="arrow-left"
			>original Wordle solver</a
		>.
	</p>

	<WordleSolver client:load />
	<p>
		Made with <a href="https://www.solidjs.com/" rel="noopener noreferrer"
			>Solid</a
		>.
	</p>
</MainPageLayout>

<style is:global>
	.wordle-solver-input {
		text-transform: uppercase;
	}
</style>
